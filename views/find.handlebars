<!-- RESULTS MAP -->

<div class="row">
    <div id="map" style="width: 100%; height: 500px;">
    </div>
</div>

<!-- FIND CONTENT - SEARCH RESULT LISTINGS -->
<div class="container">

    <div class="row m-0 p-0">

        <div class="col-md-12 mb-3 mt-5">
            <p class="h6">
                <img src="/img/glyphicons-66-tag.png">&nbsp;&nbsp;Current sales in
                <span class="contentCity">{{this.city}}, {{this.state}}</span>
            </p>
        </div>

    </div>

    <div class="row m-0 p-0">
        {{#if sale}}
        {{#each sale}}
        <div class="col-md-4 m-0 p-0">
            <div class="card text-center customCard">
                <img class="card-img-top customCardImg" src="{{ this.photo_url }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ this.fmtdate }}</h5>
                    <h6 class="card-title">{{ this.address }}</h6>
                    <h6 class="card-title">{{ this.city }},{{this.state}} {{this.zip}}</h6>
                    <p class="card-text">{{ this.comments }}</p>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-4">
                        <a href="/listing/{{this.id}}" class="btn btn-primary border-0 px-5 indListingBtn">More Info</a>
                    </div>
                </div>

            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="row">
            <h2> No results found, try other locations</h2>
        </div>
        {{/if}}

    </div>

</div>
 {{#each geocds}}
 <div class="geocds" lat="{{this.lat}}" lng ="{{this.lng}}" addr="{{this.cmpaddress}}"></div>
 {{/each}}


<script src="/js/googlemap.js"></script>
