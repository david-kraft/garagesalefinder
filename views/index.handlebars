<!-- MAIN JUMBO -->
<div class="jumbotron jumbotron-fluid mainJumbo">
    <div class="container" id="mainJumboContainer">
        <h1 class="display-3 text-center" id="mainJumboLogo">GarageFind
            <span id="tradeMark2">TM</span>
        </h1>
        <p class="lead text-center">
            <span class="mainJumboLeadHighlight">Some call it garage sales, we prefer the term treasure hunting.</span>
        </p>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="srchtxt" placeholder="City/ State/ Zip-Code">
            <div class="input-group-append">
                <button class="btn btn-outline-light pl-5 pr-5" id="searchBtn" type="button">FIND</button>
            </div>
        </div>
    </div>
</div>

<!-- INFO JUMBO -->
<div class="jumbotron jumbotron-fluid infoJumbo">
    <div class="container">

        <div class="row m-0 p-0">

            <div class="col-md-4 m-0 px-3">
                <div class="card text-center bg-transparent border-0 infoCards">
                    <div class="card-block">
                        <img class="card-img-top pb-5 infoImg" src="/img/search.png" alt="Search">
                        <h3 class="card-title text-center infoCardTitle">Search</h3>
                        <p class="card-text text-center">Search for garage sales by city, zip code, or item categories.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 m-0 px-3">
                <div class="card text-center bg-transparent border-0 infoCards">
                    <div class="card-block">
                        <img class="card-img-top pb-5 infoImg" src="/img/find_icon.png" alt="Find">
                        <h3 class="card-title text-center infoCardTitle">Find</h3>
                        <p class="card-text text-center">Sort through list of garage sales and add them to route. GarageFind will calculate the quickest route
                            through all garage sales so you can spend more time "treasure hunting."</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 m-0 px-3">
                <div class="card text-center bg-transparent border-0 infoCards">
                    <div class="card-block">
                        <img class="card-img-top pb-5 infoImg" src="/img/go.png" alt="Go">
                        <h3 class="card-title text-center infoCardTitle">Go!</h3>
                        <p class="card-text text-center">Drive, walk, or take a bike out to garage sale(s) and find "treasures."</p>
                        <br>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- INDEX CONTENT -->
<div class="container">

    <div class="row m-0 p-0">

        <div class="col-md-12 mb-3 mt-3">
            <p class="h6">
                <img src="/img/glyphicons-66-tag.png">&nbsp;&nbsp;Upcoming sales
            </p>
        </div>

    </div>

    <div class="row m-0 p-0">

        {{#each sale}}
        <div class="col-md-4 m-0 p-0">
            <div class="card text-center customCard">
                <img class="card-img-top customCardImg" src="{{ this.photo_url }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ this.fmtdate1 }}</h5>
                    <h6 class="card-title">{{ this.address }}</h6>
                    <h6 class="card-title">{{ this.city }}, {{this.state}} {{this.zip}}</h6>
                    <p class="card-text">{{ this.comments }}</p>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-4">
                        <a href="/listing/{{this.id}}" class="btn btn-primary border-0 px-5 indListingBtn">More Info</a>
                    </div>
                </div>

            </div>
        </div>
        {{/each}}

    </div>

</div>