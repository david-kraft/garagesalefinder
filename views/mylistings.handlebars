<!-- Seller Listings -->
<div class="container">


    {{#each listing}}
    <div class="row listings">
        <div class="col-md-12 m-0 p-0">
            <div class="card">
                <div class="card-body">

                    <div class="row">

                        <div class="col-md-4">
                            <p id="managerAddress">
                                {{this.address}}
                            </p>
                            <p> {{this.city}}, {{this.state}}, {{this.zip}}</p>
                        </div>

                        <div class="col-md-4">
                            <p id="managerDate">
                                {{this.fmtdate}}
                            </p>
                        </div>

                        <div class="col-md-2 text-center">
                            <a class="btn btn-primary border-0 px-5 managerEditBtn" id="editbtn" sale_event_id="{{this.id}}">Edit</a>
                        </div>
                        <div class="col-md-2 text-center">
                            <a class="btn btn-primary border-0 px-5 managerEditBtn" id="delbtn" sale_event_id="{{this.id}}">X</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    {{/each}}

</div>

